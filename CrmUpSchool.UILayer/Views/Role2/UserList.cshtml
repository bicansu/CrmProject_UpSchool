@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>

<table class="table table-striped">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Role Ata</th>
    </tr>
    @foreach(var item in Model){
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Role2/AssignRole/@item.Id" class="btn btn-dark">Rol Ata</a></td>
        </tr>
    }
</table>
